{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": 0,
        "comma-dangle": ["error", "never"],
        "arrow-body-style": ["error", "always"],
        "max-len": ["error", {
            "code": 90,
            "ignoreUrls": true
        }]
    }
}
